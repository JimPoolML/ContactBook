    <style name="CustomProgressBarTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Buttons Style -->
    <style name="Custom.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_button_round_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/brown_regular</item>
        <item name="android:textSize">@dimen/text_dim_16</item>
    </style>

    <style name="Custom.Button.Normal" parent="Custom.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_14</item>
        <item name="android:layout_marginStart">@dimen/margin_14</item>
        <item name="android:layout_marginEnd">@dimen/margin_14</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Custom.Button.Disable" parent="Custom.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_14</item>
        <item name="android:layout_marginStart">@dimen/margin_14</item>
        <item name="android:layout_marginEnd">@dimen/margin_14</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="background">@drawable/background_button_enabled</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Textlight.HintText16" parent="Text.Light">
        <item name="android:textSize">@dimen/text_dim_16</item>
        <item name="android:textColor">@color/gray_hint</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

